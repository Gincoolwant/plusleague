<header>
  <nav class="navbar navbar-expand-lg fixed-top navbar-dark bg-dark px-4">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">P+報哩災</a>
      {{#ifCond user.email "user1@example.com"}}
        <div class="nav-item">
          <a
            class="btn btn-warning"
            href="/users/demoCalendar"
          >user1的demo日曆</a>
        </div>
      {{/ifCond}}
      <button
        class="navbar-toggler"
        type="button"
        data-bs-toggle="collapse"
        data-bs-target="#navbarScroll"
      >
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarScroll">
        {{#if user}}
          <ul class="navbar-nav ms-auto">
            <li class="nav-item d-inline-flex align-items-center me-2">
              <span class="text-white nav-link">Hi, {{user.name}}</span>
            </li>
            {{#ifCond user.isAdmin "admin"}}
              <li class="nav-item">
                <a
                  href="/admin/matches"
                  class="btn btn-secondary my-2"
                >Admin後台</a>
              </li>
            {{/ifCond}}

          </ul>
          <div class="dropdown me-5">
            <a
              class="nav-link dropdown-toggle"
              href="#"
              id="navbarDropdownMenuLink"
              data-bs-toggle="dropdown"
              role="button"
            >
              <img
              {{!-- TODO: from db user avatar not fixed --}}
                src="{{user.avatar}}"
                class="rounded-circle"
                height="50"
                loading="lazy"
              />
            </a>
            <ul class="dropdown-menu">
              <li>
                <a class="dropdown-item" href="/users/{{user.id}}/profile">Profile</a>
              </li>
              <li>
                <a class="dropdown-item" href="/users/logout">Logout</a>
              </li>
            </ul>
          </div>
          {{else}}
        <div class="collapse navbar-collapse" id="navbarCollapse">
          <ul class="navbar-nav ms-auto mb-2 mb-md-0">
            <li class="nav-item me-2">
              <a href="/users/login"><button
                  class="btn btn-secondary my-2"
                >登入</button></a>
            </li>
            <li class="nav-item me-4">
              <a href="/users/register"><button
                  class="btn btn-primary my-2"
                >註冊</button></a>
            </li>
          </ul>
        </div>
        {{/if}}
      </div>
    </div>
  </nav>
</header>