<div class="container">
  <div class="row justify-content-center mt-5">
    <div class="col-md-8">
      <div class="card">
        <div class="card-body">
          <form
              action="/users/{{user.id}}/profile?_method=PUT"
              method="POST"
              enctype="multipart/form-data"
            >
          <div class="row">
            {{> message}}
            <!-- Profile Picture -->
            <div class="col-md-4">
              <div class="text-center mb-4">
                <img
                  src="{{user.avatar}}"
                  class="mt-5 img-fluid rounded-circle"
                  alt="Profile avatar"
                />
              </div>
            </div>
            <!-- User Info -->
              <div class="col-md-8">
                <h3 class="card-title">Profile</h3>
                <!-- Name -->
                <div class="mb-3">
                  <label for="name" class="form-label">Name</label>
                  <input
                    type="text"
                    class="form-control"
                    value="{{user.name}}"
                    name="name"
                  />
                </div>
                <!-- Email -->
                <div class="mb-3">
                  <label for="email" class="form-label">Email</label>
                  <input
                    type="email"
                    class="form-control"
                    value="{{user.email}}"
                    disabled
                  />
                </div>
                <!-- Upload Profile Picture -->
                <div class="mb-3">
                  <label for="profilePicture" class="form-label">Upload Profile
                    Avatar</label>
                  <input
                    type="file"
                    class="form-control"
                    name="avatar"
                  />
                  <small class="text-muted">Max file size: 5MB</small>
                </div>
                <!-- Save Button -->
                <button type="submit" class="btn btn-primary">Save Changes</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>